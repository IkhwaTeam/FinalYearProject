<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Myfypproject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Myfypproject" parent="Base.Theme.Myfypproject" />
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item> <!-- Title color -->
        <item name="android:textSize">22sp</item> <!-- Title size -->
        <item name="android:textStyle">bold</item> <!-- Title style -->
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextStyle</item>
        <item name="android:padding">8dp</item>
    </style>
    <!-- Custom Popup Menu Style -->
    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item> <!-- Black Text in Menu -->
        <item name="android:popupBackground">@android:color/white</item> <!-- White Background -->
    </style>
    <style name="CustomSpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/blue</item> <!-- Spinner main text color -->
        <item name="android:popupBackground">@color/white</item> <!-- Drop-down background -->
        <item name="android:dropDownItemStyle">@style/DropDownTextColor</item>
    </style>

    <style name="DropDownTextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item> <!-- Drop-down ke items ka color -->
    </style>


    <!-- Base application theme. -->
    <style name="Theme.Ikhwa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#242E67</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>



        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item> <!-- Change text size as needed -->
        <item name="android:textColor">@android:color/white</item> <!-- Adjust text color -->
        <item name="colorPrimary">#174BF0</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimaryDark">#053FF8</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="ListItemTextStyle">
        <item name="android:textColor">@color/blue</item> <!-- Black text -->
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/white</item>
    </style>


    <style name="Theme.Ikhwa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ikhwa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ikhwa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>