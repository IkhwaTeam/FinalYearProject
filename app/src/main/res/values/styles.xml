<resources>
    <style name="CalendarHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarDay">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="CalendarTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">#3F51B5</item> <!-- Month & Year Color (Orange) -->
    </style>

    <!-- Date Style -->
    <style name="CalendarDateStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item> <!-- Black Color -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Weekday Style -->
    <style name="CalendarWeekStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3F51B5</item> <!-- Green Color -->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B3B1B1</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:textAppearance">@style/PopupMenuTextStyle</item>
    </style>

    <style name="PopupMenuTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#242E67</item>
    </style>
    <style name="CalendarHeaderStyle" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">#000000</item> <!-- Black color -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
