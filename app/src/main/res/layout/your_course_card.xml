<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/card_background_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#1DB586"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 Ahadees Nabvi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_chapter_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_course_title"
            android:text="40 Days"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/tv_chapter_count"
            android:layout_marginTop="8dp"
            android:progress="25"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress"/>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:text="10/40 Completed"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Type"
            android:textColor="#000"
            android:layout_below="@id/tv_progress"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_view_lecture"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/course_type"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="View"
            android:background="@drawable/shape5"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
