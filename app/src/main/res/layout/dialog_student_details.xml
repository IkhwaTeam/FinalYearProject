<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/rejected_recycler_background"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dialog_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/dialog_student_fathername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Father Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/dialog_student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="@color/blue"
        android:background="@drawable/request_teacher_background"
        android:layout_gravity="end" />
</LinearLayout>
