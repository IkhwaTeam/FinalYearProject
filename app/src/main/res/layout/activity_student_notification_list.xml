<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".StudentNotificationListActivity">

    <!-- ListView for displaying notifications -->
    <ListView
        android:id="@+id/notification_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:padding="16dp"
        android:divider="@android:color/darker_gray"/>

    <!-- TextView to show unseen notification count -->
    <TextView
        android:id="@+id/unseen_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unseen Notifications: 0"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity="center"/>

</LinearLayout>
