<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr1"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:background="@drawable/std_shape1"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/logo"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/notification_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikhwa"
            android:textColor="#3F51B5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTime"
            android:text="06:10 PM"
            android:textSize="10sp"
            android:textColor="#888888"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:text="Notification Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDescription"
        android:text="Notification Description"
        android:layout_width="wrap_content"
        android:textColor="#171718"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDate"
        android:text="14-06-2025"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Admin edit/delete -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageView
            android:id="@+id/btnEdit"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/btnDelete"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

</LinearLayout>
