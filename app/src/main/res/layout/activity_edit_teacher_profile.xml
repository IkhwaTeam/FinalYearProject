<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <!-- Header with image and student name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_marginTop="-18dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iqra Kanwal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <!-- Editable Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FBF8F8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Each field row -->
                <!-- Name -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter name"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter email"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Phone:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter phone"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Qualification -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Qualification:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etQualification"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter qualification"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Father Name -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Father Name:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etFatherName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter father name"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter address"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Interest -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Interest:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etInterest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter interest"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

                <!-- Why Interested -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Why:"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etWhy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Why interested"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000000"
                        android:textColorHint="#888888"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Button -->
    <Button
        android:id="@+id/btnUpdate"
        android:text="Update Profile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="110dp"
        android:background="#3F51B4"
        android:textColor="#FFFFFF" />
</FrameLayout>
