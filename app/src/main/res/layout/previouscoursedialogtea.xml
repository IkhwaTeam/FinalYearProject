<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/id1_pre"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape11tea">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/teacher_ahadees_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 Ahadees Nabwi"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingEnd="12dp"/>
        <ImageView
            android:id="@+id/teacher_close_btn_pre"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close_button"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </LinearLayout>

    <TextView
        android:id="@+id/teacher_delete_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In this course, we will explore each of these 99 names, their meanings, significance, and how we can incorporate them into our daily lives."
        android:paddingStart="20dp"
        android:layout_margin="5dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/teacher_ima_duration_pre"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/duration"/>

            <TextView
                android:id="@+id/teacher_dur_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/teacher_d1_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 days"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/teacher_student_pre"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/studenttea"/>

            <TextView
                android:id="@+id/teacher_stu_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/teacher_stu_detele_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/teacher_test_image_pre"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/test"/>

            <TextView
                android:id="@+id/teacher_test_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/teacher_test_detele_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 "
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <com.example.ikhwa.CircularProgressView
        android:id="@+id/custom_progress5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        />

</LinearLayout>