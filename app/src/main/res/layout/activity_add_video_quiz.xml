<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E6E6"
    tools:context=".AddVideoQuizDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <!-- Video Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:backgroundTint="#3F51B5"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Add Video Lecture"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:paddingBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_video_lecture_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Lecture Title"
                        android:inputType="text"
                        android:textColorHint="@color/white"
                        android:backgroundTint="@color/white"/>

                    <EditText
                        android:id="@+id/et_video_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Video URL"
                        android:inputType="textUri"
                        android:textColorHint="@color/white"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#Ffff"/>

                    <Button
                        android:id="@+id/btn_add_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Video"
                        android:textAllCaps="false"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#FFEB3B"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quiz Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Quiz for Above Lecture"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_quiz_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Quiz Question"
                        android:inputType="text"

                        android:backgroundTint="@color/black"/>

                    <EditText
                        android:id="@+id/et_quiz_option_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Option 1"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/black"/>

                    <EditText
                        android:id="@+id/et_quiz_option_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Option 2"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/black"/>

                    <EditText
                        android:id="@+id/et_quiz_option_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Option 3"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/black"/>

                    <EditText
                        android:id="@+id/et_quiz_option_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Option 4"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/black"/>

                    <EditText
                        android:id="@+id/et_quiz_correct_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Correct Answer"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/black"/>

                    <Button
                        android:id="@+id/btn_add_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Quiz"
                        android:textAllCaps="false"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#1DB384"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
