<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0F0"
    android:orientation="vertical"
    tools:context=".AnalyticsTeacherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Analytics"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="35dp"
        app:cardElevation="10dp"
        android:layout_marginTop="-50dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/teacher_icon"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miss Iqra"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="#0E3AF2"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher 5"
                        android:textColor="#878787"
                        android:layout_gravity="center"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Courses"
        android:textSize="26sp"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#2195F1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Course Item Start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_course_blue"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tajweed B2"
                            android:textSize="18sp"
                            android:textColor="#0E3AF2"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="?android:attr/progressBarStyleLarge"
                        android:indeterminate="false"
                        android:progress="60"
                        android:max="100"
                        android:indeterminateTint="#376CDE"
                        android:progressTint="@color/blue"
                        android:progressBackgroundTint="@color/gray"/>
                </LinearLayout>

                <!-- Repeat for another course -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_course_green"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahadees B2"
                            android:textSize="18sp"
                            android:textColor="#0E3AF2"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="?android:attr/progressBarStyleLarge"
                        android:indeterminate="false"
                        android:progress="70"
                        android:max="100"
                        android:progressTint="@color/blue"
                        android:indeterminateTint="#2A8809"
                        android:progressBackgroundTint="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_course_red"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahadees B2"
                            android:textSize="18sp"
                            android:textColor="#0E3AF2"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="?android:attr/progressBarStyleLarge"
                        android:indeterminate="false"
                        android:progress="50"
                        android:max="100"
                        android:indeterminateTint="#C62929"
                        android:progressTint="@color/blue"
                        android:progressBackgroundTint="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_course_light_green"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asma e Hasna"
                            android:textSize="18sp"
                            android:textColor="#0E3AF2"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Students"
                            android:textColor="#878787"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="?android:attr/progressBarStyleLarge"
                        android:indeterminate="false"
                        android:progress="100"
                        android:max="100"
                        android:progressTint="@color/blue"
                        android:indeterminateTint="#018584"
                        android:progressBackgroundTint="@color/gray"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
