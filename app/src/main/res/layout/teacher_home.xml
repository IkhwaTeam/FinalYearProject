<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".Teacher_home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FDFDFD"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/shapetr1"
            android:gravity="center"
            android:layout_marginTop="-18dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Analytics"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Welcome Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/app_logo_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/teacherdashboradicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iqra Kanwal"
                    android:textStyle="bold"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IQII789"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="15dp"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/btn_see_moretea"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="See Profile"
                    android:background="@drawable/shape5"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:layout_marginTop="85dp"
                    android:layout_marginStart="15dp"
                    android:backgroundTint="#FFEB3B"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#1DB586">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/staff"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Staff"
                        android:textColor="@color/app_logo_background"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/tbtn_see_staff"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:text="See more"
                        android:background="@drawable/shape5"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        android:textColor="#1DB586"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FD6A63">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/teacher_course"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courses"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/tbtn_see_course"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:text="See more"
                        android:background="@drawable/shape5"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        android:textColor="#FB6A63"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Analytics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#3F51B5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/analyticstea"/>

                <TextView
                    android:id="@+id/tvt_analytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Analytics"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>
