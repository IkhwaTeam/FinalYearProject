<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutUsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/aboutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our app is developed to enhance the learning experience for students and simplify management for teachers and administrators.\n\nWe aim to provide:\n\n- Easy student attendance tracking\n- Real-time notifications\n- Course and group management\n\nOur team is committed to continuous improvement. If you have suggestions or feedback, feel free to reach out.\n\nContact: info@example.com"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#444444" />

    </LinearLayout>
</ScrollView>
